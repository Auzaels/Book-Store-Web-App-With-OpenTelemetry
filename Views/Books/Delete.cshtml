@model BookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Kitabı Kaldır</h1>

<h3>Bu kitabı silmek istediğine emin misin?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kitap Adı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class = "col-sm-2">
            Kitap Açıklaması:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookDescription)
        </dd>
        <dt class = "col-sm-2">
            Kitap Dili:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookLanguage)
        </dd>
        <dt class = "col-sm-2">
            Kitap ISBN:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookISBN)
        </dd>
        <dt class = "col-sm-2">
            Yayınlanma Tarihi:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookDatePublished)
        </dd>
        <dt class = "col-sm-2">
            Kitap Fiyatı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class = "col-sm-2">
            Kitap Yazarı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookAuthor)
        </dd>
        <dt class = "col-sm-2">
            Kitap Image URL:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookImageUrl)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i> Geri Dön</a>
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Kaldır" class="btn btn-danger" />
    </form>
</div>
