@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Kitap Detayları</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kitap Adı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class = "col-sm-2">
            Kitap Açıklaması:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookDescription)
        </dd>
        <dt class = "col-sm-2">
            Kitap Dili:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookLanguage)
        </dd>
        <dt class = "col-sm-2">
            ISBN:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookISBN)
        </dd>
        <dt class = "col-sm-2">
            Yayınlanma Tarihi:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookDatePublished)
        </dd>
        <dt class = "col-sm-2">
            Kitap Fiyatı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class = "col-sm-2">
            Kitap Yazarı:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookAuthor)
        </dd>
        <dt class = "col-sm-2">
            Kitap URL:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookImageUrl)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i> Geri Dön</a>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Düzenle</a>
</div>
