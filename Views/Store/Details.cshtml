@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<style>
    .col-sm-2
    {
        width: 150px;
    }
    .col-sm-10
    {
        width: 400px;
    }
</style>

<h1>Kitap Detayları</h1>

<div class="row">
    <div class="col-5">

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Kitap Adı:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookTitle)
                </dd>
                <dt class="col-sm-2">
                    Kitap Yazarı:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookAuthor)
                </dd>
                <dt class="col-sm-2">
                    Kitap Dili:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookLanguage)
                </dd>
                <dt class="col-sm-2">
                   Kitap ISBN:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookISBN)
                </dd>
                <dt class="col-sm-2">
                    Çıkış Tarihi:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookDatePublished)
                </dd>
                <dt class="col-sm-2">
                    Kitap Fiyatı:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookPrice)
                </dd>
                <dt class="col-sm-2">
                    Açıklama:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookDescription)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i> Geri Dön</a>
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.BookId" class="btn btn-primary store-btn float-right mr-5">Sepete Ekle <i class="fa-solid fa-cart-plus"></i></a>
        </div>
    </div>
    <div class="col-4">
        <img src="@Model.BookImageUrl" class="w-100" />
    </div>
</div>