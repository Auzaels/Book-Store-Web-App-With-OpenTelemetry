@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h3>“@Model.Name” rolünü kaldırmak üzeresiniz!</h3>
<h6>Not: Bu eylem geri alınamaz.</h6>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Kaldır</button>
    <div class="mt-2">
        <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-ban"></i> İptal</a>
    </div>
</form>